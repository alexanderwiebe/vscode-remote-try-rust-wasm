{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "wasm build",
            "command": "wasm-pack build",
            "type": "shell",
            "presentation": {
                "group": "main",
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "wasm test",
            "command": "wasm-pack test --chrome",
            "type": "shell",
            "presentation": {
                "group": "main",
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "build site",
            "command": "npm --prefix ./www/ run build",
            "type": "shell",
            "presentation": {
                "group": "main",
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "run site",
            "command": "npm --prefix ./www/ run start",
            "type": "shell",
            "presentation": {
                "group": "main",
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}